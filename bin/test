#!/usr/bin/env bash
# test.sh
# author: peterm
# created: 2026-01-01
#############################################################
source "$( cd -- "$( dirname -- "${BASH_SOURCE[0]}" )" &> /dev/null && pwd )/PABLO.sh"

#############################################################
pStart "$@"

log_debug "hello world"
log_info "hello world"
log_warn "hello world"
log_error "hello world"

check_is_root || pFail "must be root" 5

check_command_avail git || {
    log_error "git needed to work!"
    exit 1
}
ask_to_continue "break stuff"

