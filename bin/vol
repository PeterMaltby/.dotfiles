#!/usr/bin/env bash
# vol.sh
# author: peterm
# created: 2026-01-02
#############################################################
source "$( cd -- "$( dirname -- "${BASH_SOURCE[0]}" )" &> /dev/null && pwd )/PABLO.sh"

param="$1"
#############################################################
pStart

quiteMode=true

pCheckCommandAvail pamixer

if [[ -v param ]]; then
    pamixer --set-volume "$param"
else
    pamixer --get-volume
fi

