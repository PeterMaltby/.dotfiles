#!/usr/bin/env bash
# vol.sh
# author: peterm
# created: 2026-01-02
#############################################################
source "$( cd -- "$( dirname -- "${BASH_SOURCE[0]}" )" &> /dev/null && pwd )/PABLO.sh"

param="$1"
#############################################################
pStart "$@"

check_command_avail pamixer || handle_error "pamixer not installed" 1

if [[ $param =~ ^[0-9]+$ ]]; then
    pamixer --set-volume "$param"
    log_debug "set volume to \"$param\""
else
    pamixer --get-volume
fi

